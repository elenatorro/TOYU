<% @cases.sort.each do |use_case| %>
<div class="col-md-6">
	  		<%= bootstrap_form_for(use_case, inline_errors: true, :html => {:class => 'form-panel'}, :id => use_case.id, :method => :put) do |f| %>
				<div class="login-wrap">
					<%= f.text_field :name %>
					<%= f.text_area :description %>
				    <%= f.text_area :field_of_application %>
				    <%= f.text_area :actors %>
				    <%= f.text_area :precondition %>
				    <%= f.text_area :trigger %>
				    <%= f.text_area :basic_flow %>
				    <%= f.text_area :alternate_flow %>
				    <%= f.text_area :postcondition %>
					<button class="btn btn-theme btn-block" type="submit">Update</button>
				</div>
			<% end %>
	</div>
<% end %>